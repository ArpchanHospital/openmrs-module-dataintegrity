<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.dataintegrity">

	<class name="DataIntegrityCheckTemplate" table="dataintegrity_integrity_checks">

		<id name="id" type="int" column="dataintegrity_integrity_check_id">
			<generator class="native" />
		</id>
	
		<property name="name" type="java.lang.String" not-null="true"
			length="100" column="check_name" />
	
		<property name="checkCode" type="java.lang.String" not-null="true"
			length="1000" column="check_code" />
	
		<property name="checkType" type="java.lang.String" not-null="true"
			length="45" column="check_type" />
	
		<property name="resultType" type="java.lang.String" not-null="true"
			length="45" column="check_result_type" />
	
		<property name="failDirective" type="java.lang.String"
			not-null="true" length="45" column="check_fail" />
	
		<property name="failDirectiveOperator" type="java.lang.String"
			not-null="true" length="45" column="check_fail_operator" />
	
		<property name="repairType" type="java.lang.String" not-null="false"
			length="45" column="check_repair_type" />
	
		<property name="repairDirective" type="java.lang.String"
			not-null="false" length="1000" column="check_repair" />
	
		<property name="repairParameters" type="java.lang.String"
			not-null="false" length="500" column="check_parameters" />

		<one-to-one name="latestResults" class="DataIntegrityCheckResultTemplate"
			property-ref="integrityCheck" />

	</class>
</hibernate-mapping>
