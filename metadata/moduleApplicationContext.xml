<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="dataIntegrityUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
                <prop key="module/dataintegrity/displayTemplate.form">displayTemplateForm</prop>
                <prop key="module/dataintegrity/dataIntegrityChecks.list">dataIntegrityChecksList</prop>
                <prop key="module/dataintegrity/integrityCheck.form">integrityCheckForm</prop>
                <prop key="module/dataintegrity/deleteIntegrityCheck.form">deleteIntegrityCheckForm</prop>
                <prop key="module/dataintegrity/runSingleCheck.list">runSingleCheckList</prop>
                <prop key="module/dataintegrity/runMultipleChecks.list">runMultipleChecksList</prop>
                <prop key="module/dataintegrity/results.list">resultsList</prop>
                <prop key="module/dataintegrity/uploadCheck.list">uploadCheckList</prop>
            </props>
		</property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.dataintegrity.DataIntegrityService</value>
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.dataintegrity.impl.DataIntegrityServiceImpl">
							<property name="dataIntegrityDAO">
								<bean class="org.openmrs.module.dataintegrity.db.hibernate.HibernateDataIntegrityDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean id="displayTemplateForm" class="org.openmrs.module.dataintegrity.web.controller.DisplayTemplateFormController">
        <property name="commandName"><value>displayTemplateForm</value></property>
        <property name="formView"><value>/module/dataintegrity/displayTemplateForm</value></property>
        <property name="successView"><value>redirect:displayTemplate.form</value></property>
    </bean>
    
    <bean id="dataIntegrityChecksList" class="org.openmrs.module.dataintegrity.web.controller.DataIntegrityChecksListController">
        <property name="commandName"><value>dataIntegrityChecksList</value></property>
        <property name="formView"><value>/module/dataintegrity/dataIntegrityChecksList</value></property>
        <property name="successView"><value>dataIntegrityChecks.list</value></property>
    </bean>
    
    <bean id="integrityCheckForm" class="org.openmrs.module.dataintegrity.web.controller.IntegrityCheckFormController">
        <property name="commandName"><value>integrityCheckForm</value></property>
        <property name="formView"><value>/module/dataintegrity/integrityCheckForm</value></property>
        <property name="successView"><value>dataIntegrityChecks.list</value></property>
    </bean>
    
    <bean id="deleteIntegrityCheckForm" class="org.openmrs.module.dataintegrity.web.controller.DeleteIntegrityCheckFormController">
        <property name="commandName"><value>deleteIntegrityCheckForm</value></property>
        <property name="formView"><value>/module/dataintegrity/deleteIntegrityCheckForm</value></property>
        <property name="successView"><value>dataIntegrityChecks.list</value></property>
    </bean>
    
    <bean id="runSingleCheckList" class="org.openmrs.module.dataintegrity.web.controller.RunSingleCheckListController">
        <property name="commandName"><value>runSingleCheckList</value></property>
        <property name="formView"><value>/module/dataintegrity/runSingleCheckList</value></property>
        <property name="successView"><value>results.list</value></property>
    </bean>
    
    <bean id="runMultipleChecksList" class="org.openmrs.module.dataintegrity.web.controller.RunMultipleChecksListController">
        <property name="commandName"><value>runMultipleChecksList</value></property>
        <property name="formView"><value>/module/dataintegrity/runMultipleChecksList</value></property>
        <property name="successView"><value>results.list</value></property>
    </bean>
    
    <bean id="resultsList" class="org.openmrs.module.dataintegrity.web.controller.ResultsListController">
        <property name="commandName"><value>resultsList</value></property>
        <property name="formView"><value>/module/dataintegrity/resultsList</value></property>
        <property name="successView"><value>results.list</value></property>
    </bean>
    
    <bean id="uploadCheckList" class="org.openmrs.module.dataintegrity.web.controller.UploadCheckListController">
        <property name="commandName"><value>uploadCheckList</value></property>
        <property name="formView"><value>/module/dataintegrity/uploadCheckList</value></property>
        <property name="successView"><value>uploadCheck.list</value></property>
    </bean>
</beans>
